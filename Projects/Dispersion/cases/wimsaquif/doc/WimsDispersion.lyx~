\begin_body

\begin_layout Title
Dispersion:
 the effects of aquifer heterogeneity
\begin_inset Newline newline
\end_inset

c o n c e p t
\end_layout

\begin_layout Author
prof.
 dr.ir.
 T.N.Olsthoorn
\end_layout

\begin_layout Date
2025-04-18
\end_layout

\begin_layout Standard
\align center
\begin_inset Graphics
	filename /Users/Theo/GRWMODELS/python/mf6lab/Projects/Dispersion/cases/wimsaquif/images/cumulatives.png
	width 70text%

\end_inset


\end_layout

\begin_layout Standard
\begin_inset CommandInset toc
